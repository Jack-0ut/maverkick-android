<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/maverkick_light_gray">

    <!-- Guidelines for flexible positioning -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideCompletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Completion Rate Label -->
    <TextView
        android:id="@+id/tv_completionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/completion_rate_label"
        android:textSize="14sp"
        android:textColor="@color/maverkick_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Icon for Completion Rate -->
    <ImageView
        android:id="@+id/ic_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_completion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_completionLabel"
        app:layout_constraintBottom_toTopOf="@+id/progressCompletionRate"
        app:tint="@color/maverkick_light_green" />

    <!-- Completion Rate in Percentage -->
    <TextView
        android:id="@+id/tv_completionRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/maverkick_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_completion"
        app:layout_constraintTop_toTopOf="@id/ic_completion"
        app:layout_constraintBottom_toBottomOf="@id/ic_completion" />

    <!-- Circular progress bar for completion rate -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressCompletionRate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.25"
        app:trackThickness="8dp"
        app:trackColor="@color/maverkick_medium_gray"
        app:indicatorColor="@color/maverkick_main"
        app:layout_constraintTop_toBottomOf="@+id/ic_completion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

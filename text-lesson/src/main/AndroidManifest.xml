<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maverkick.text_lesson">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application>
        <activity android:name=".ui.TextLessonActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.TextCourseOverviewActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.CreatePersonalizedCourseActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="maverkick"
                    android:host="text-lesson"
                    android:pathPrefix="/create_personalized_course" />
            </intent-filter>
        </activity>

    </application>
</manifest>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/maverkick_light_green">

    <TextView
        android:id="@+id/heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/heading_text"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/maverkick_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/input_course_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/course_description_hint"
        android:inputType="textMultiLine"
        style="@style/PrettyEditText"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_input_rounded_background"
        android:padding="16dp"
        android:textColor="@color/maverkick_black" />

    <TextView
        android:id="@+id/languageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language_text"
        android:textColor="@color/maverkick_main"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/input_course_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/course_language"
        style="@style/LanguageDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/languageLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:boxStrokeColor="@color/language_input_colors"
        android:layout_marginTop="8dp">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:background="@null"
            android:textColor="@color/maverkick_black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_generate_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_course"
        android:textColor="@color/maverkick_main"
        app:layout_constraintWidth_percent="0.7"
        android:backgroundTint="@color/maverkick_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        android:elevation="8dp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>

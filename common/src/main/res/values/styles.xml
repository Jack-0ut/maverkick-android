<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Your custom Chip style -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/maverkick_main</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/maverkick_light_green</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textColor">@color/maverkick_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InterestChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/maverkick_light_gray</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/maverkick_light_green</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textColor">@color/maverkick_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
        <item name="boxBackgroundColor">@color/maverkick_white</item>
    </style>

    <style name="LanguageDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>
        <item name="boxBackgroundColor">@color/maverkick_accent_light</item>
        <item name="boxStrokeColor">@color/maverkick_accent</item>
        <item name="android:textColorHint">@color/maverkick_white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="GapDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/maverkick_accent</item>
        <item name="boxBackgroundColor">@color/maverkick_white</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="endIconDrawable">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/main_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="PrettyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">6</item>
        <item name="android:minLines">4</item>
        <item name="android:maxLines">10</item>
        <item name="android:maxLength">300</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">top|start</item>
        <item name="android:background">@drawable/pretty_edit_text_background</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <style name="roundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>

</resources>